generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // или другой используемый вами провайдер
  url      = env("DATABASE_URL")
}

model Courses {
  id          Int      @id @default(autoincrement())
  author_id   Int
  title       String
  description String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  lessons     Lessons[]
  enrollments Enrollments[]

  @@map("Courses")
}

model Lessons {
  id          Int      @id @default(autoincrement())
  course_id   Int
  title       String
  description String?
  content     String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  course      Courses  @relation(fields: [course_id], references: [id])

  @@map("Lessons")
}

model Enrollments {
  id                Int      @id @default(autoincrement())
  join_at           DateTime @default(now())
  completed_percent Int
  user_id           Int
  course_id         Int
  status_id         Int

  course           Courses           @relation(fields: [course_id], references: [id])
  statusEnrollment StatusEnrollments @relation(fields: [status_id], references: [id])

  @@map("Enrollments")
}

model StatusEnrollments {
  id    Int     @id @default(autoincrement())
  label String

  enrollments Enrollments[]

  @@map("StatusEnrollments")
}
